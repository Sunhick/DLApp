doctype html
html
  head
    title dlapp
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.css')
    script(type='text/javascript', src='/bower_components/jquery/dist/jquery.min.js')
    script(type='text/javascript', src='/bower_components/bootstrap/dist/js/bootstrap.min.js')
    script(type='text/javascript', src='/bower_components/angular/angular.min.js')
    script(type='text/javascript', src='/bower_components/angular-route/angular-route.min.js')
    script(type='text/javascript', src='/controllers/dlapp.js')
    script(type='text/javascript', src='/controllers/appRoutes.js')
    script(type='text/javascript', src='/controllers/mainController.js')
    script(type='text/javascript', src='/controllers/loginController.js')
    script(type='text/javascript', src='/controllers/studentController.js')
    script(type='text/javascript', src='/controllers/facultyController.js')
    base(href='/')
  body(ng-cloak='', ng-app='dlapp')
    .container-fluid
      nav.navbar.navbar-inverse.navbar-fixed-top
        .container-fluid
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/') DL-App
          #bs-example-navbar-collapse-1.collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-left(ng-controller='mainController as mainCtrl')
              li(ng-repeat='headerMenu in mainCtrl.headerMenus', ng-class='{active : mainCtrl.activeMenu == headerMenu.name}')
                a(ng-href='{{ headerMenu.link }}', ng-click='mainCtrl.activate($index)')
                  span(ng-class="'{{headerMenu.glyphicon}}'") {{headerMenu.name}}
            #bs-example-navbar-collapse-1.collapse.navbar-collapse
              ul.nav.navbar-nav.navbar-right
                li(ng-class='active')
                  a(href='login')
                    span.glyphicon.glyphicon-log-in
                    |  Login
    div(ng-view='')
    .footer.navbar-fixed-bottom
      .container.text-center
        p.text-muted.credit
          span.glyphicon.glyphicon-copyright-mark
          |  2016. All rights reserved. University of Colorado, Boulder
